/* =========================
   RESET & BASE STYLES
========================= */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  background-color: #faf4f5;
  color: #252525;
  line-height: 1.6;
}

h1, h2, h3 {
  color: #443627;
}

a {
  text-decoration: none;
  color: inherit;
}

/* =========================
   HEADER & NAV
========================= */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1rem 2rem;
  background-color: #fff;
  border-bottom: 1px solid #ccc;
  position: sticky;
  top: 0;
  z-index: 100;
}

.logo {
  font-size: 1.8rem;
  font-weight: bold;
  color: #443627;
}

.nav a,
.nav button {
  margin-left: 1rem;
}

.nav button {
  cursor: pointer;
}

/* Buttons */
.btn-primary {
  background-color: #443627;
  color: #fff;
  border: none;
  padding: 0.5rem 1rem;
  border-radius: 0.5rem;
  transition: 0.3s;
}

.btn-primary:hover {
  background-color: #D98324;
}

.btn-secondary {
  background-color: #fff;
  color: #443627;
  border: 2px solid #443627;
  padding: 0.5rem 1rem;
  border-radius: 0.5rem;
  transition: 0.3s;
}

.btn-secondary:hover {
  background-color: #443627;
  color: #fff;
}

.hidden {
  display: none !important;
}

/* =========================
   HERO
========================= */
.hero {
  background: url('assets/hero-bg.jpg') center/cover no-repeat;
  padding: 4rem 2rem;
  text-align: center;
  color: #fff;
}

.hero h2 {
  font-size: 2.5rem;
  margin-bottom: 1rem;
}

.hero p {
  font-size: 1.2rem;
  margin-bottom: 1.5rem;
}

/* =========================
   MENU GRID
========================= */
.product-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 1.5rem;
  margin-top: 1rem;
}

.product-card {
  background-color: #fff;
  padding: 1rem;
  border-radius: 1rem;
  box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  text-align: center;
}

.product-card img {
  width: 100%;
  border-radius: 0.5rem;
  height: 150px;
  object-fit: cover;
}

.product-card h3 {
  margin: 0.5rem 0;
  font-size: 1.2rem;
}

.product-card p {
  font-size: 0.9rem;
  margin-bottom: 0.5rem;
}

/* =========================
   CART PANEL
========================= */
.cart {
  position: fixed;
  top: 0;
  right: -400px;
  width: 350px;
  height: 100%;
  background: #fff;
  box-shadow: -4px 0 8px rgba(0,0,0,0.2);
  padding: 1rem;
  transition: 0.3s;
  z-index: 200;
  overflow-y: auto;
}

.cart.show {
  right: 0;
}

.cart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.cart-header h3 {
  font-size: 1.3rem;
}

.close-btn {
  background: none;
  border: none;
  font-size: 1.2rem;
  cursor: pointer;
}

#cart-items {
  list-style: none;
  margin: 1rem 0;
}

#cart-items li {
  display: flex;
  justify-content: space-between;
  margin-bottom: 0.5rem;
}

.remove-btn {
  background: none;
  border: none;
  color: red;
  font-weight: bold;
  cursor: pointer;
}

.cart-actions button {
  width: 100%;
  margin-top: 0.5rem;
}

/* =========================
   MODAL
========================= */
.modal {
  display: none;
  position: fixed;
  z-index: 300;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  overflow: auto;
  background-color: rgba(0,0,0,0.6);
  justify-content: center;
  align-items: center;
}

.modal-content {
  background-color: #fff;
  padding: 2rem;
  border-radius: 1rem;
  width: 90%;
  max-width: 400px;
  position: relative;
}

.modal .close {
  position: absolute;
  top: 1rem;
  right: 1rem;
  font-size: 1.2rem;
  cursor: pointer;
}

.auth-tabs {
  display: flex;
  justify-content: space-between;
  margin-bottom: 1rem;
}

.auth-tabs .tab {
  flex: 1;
  padding: 0.5rem 0;
  background: #eee;
  border-radius: 0.5rem;
  cursor: pointer;
  text-align: center;
  margin-right: 0.5rem;
}

.auth-tabs .tab.active {
  background: #443627;
  color: #fff;
}

/* Forms */
.auth-form input {
  width: 100%;
  padding: 0.5rem;
  margin-bottom: 0.8rem;
  border-radius: 0.5rem;
  border: 1px solid #ccc;
}

.auth-form button {
  width: 100%;
  margin-bottom: 0.5rem;
}

/* Google button */
.google-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  border: 1px solid #ccc;
  border-radius: 0.5rem;
  padding: 0.5rem;
  cursor: pointer;
  transition: 0.3s;
}

.google-btn:hover {
  background: #f2f2f2;
}

/* =========================
   FOOTER
========================= */
.footer {
  background: #443627;
  color: #fff;
  text-align: center;
  padding: 1rem;
  margin-top: 2rem;
}

/* =========================
   RESPONSIVE
========================= */
@media(max-width:768px) {
  .product-grid {
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
  }

  iframe {
    width: 100%;
    height: 300px;
  }

  .header {
    flex-direction: column;
    align-items: flex-start;
  }

  .nav {
    margin-top: 1rem;
    display: flex;
    flex-wrap: wrap;
  }

  .nav button {
    margin-top: 0.5rem;
  }
}
